<section class="max-w-3xl mx-auto py-10">

  <div class="bg-white shadow rounded-xl p-8">

    <h1 class="text-3xl font-bold text-purple-700 mb-6">
      <%= @car.make %> <%= @car.model %>
    </h1>

    <div class="grid grid-cols-2 gap-6 text-sm text-gray-700">

      <div>
        <p class="text-gray-500">Year</p>
        <p class="font-semibold text-lg"><%= @car.year %></p>
      </div>

      <div>
        <p class="text-gray-500">Odometer</p>
        <p class="font-semibold text-lg">
          <%= number_with_delimiter(@car.odometer) %> km
        </p>
      </div>

      <div>
        <p class="text-gray-500">Price</p>
        <p class="font-semibold text-xl text-purple-700">
          $<%= number_with_delimiter(@car.price) %>
        </p>
      </div>

      <div>
        <p class="text-gray-500">Date added</p>
        <p class="font-semibold">
          <%= @car.date_added.strftime("%d %b %Y") %>
        </p>
      </div>

    </div>

    <div class="mt-6">
      <p class="text-gray-500 mb-2">Description</p>
      <p class="text-gray-700 leading-relaxed">
        <%= @car.description %>
      </p>
    </div>

    <div class="mt-8 flex gap-4">
      <% if current_user&.admin? %>
        <%= link_to "Edit",
              edit_car_path(@car),
              class: "px-4 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition" %>

        <%= link_to "Delete",
              car_path(@car),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" %>
      <% end %>
      <%= link_to "Back to Cars",
            cars_path,
            class: "inline-block bg-purple-600 text-white px-6 py-3 rounded-lg shadow hover:bg-purple-700 transition duration-200" %>

    </div>

  </div>

</section>
