<% flash.each do |type, message| %>
  <% css_classes =
       case type.to_sym
       when :notice
         "bg-green-100 text-green-700"
       when :alert
         "bg-red-100 text-red-700"
       else
         "bg-gray-100 text-gray-700"
       end %>

  <div class="<%= css_classes %> p-3 rounded mb-4">
    <%= message %>
  </div>
<% end %>