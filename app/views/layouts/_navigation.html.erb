<nav class="space-x-4 flex items-center">
  <%= link_to t("navigation.home"), root_path, class: "hover:text-purple-800" %>
  <%= link_to t("navigation.cars"), cars_path, class: "hover:text-purple-800" %>
  <%= link_to t("navigation.search"), new_search_path, class: "hover:text-purple-800" %>
  <%= link_to t("navigation.help"), help_path, class: "hover:text-purple-800" %>

  <% if user_signed_in? %>
    <%= link_to t("navigation.my_searches"), searches_path,
          class: "px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700" %>

    <%= link_to t("navigation.logout"), destroy_user_session_path,
          data: { turbo_method: :delete },
          class: "px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700" %>
  <% else %>
    <%= link_to t("navigation.login"), new_user_session_path,
          class: "px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700" %>

    <%= link_to t("navigation.sign_up"), new_user_registration_path,
          class: "px-4 py-2 bg-purple-600 text-white rounded hover:bg-purple-700" %>
  <% end %>

  <div class="ml-4 flex items-center space-x-2 text-sm">
    <%= locale_switcher %>
  </div>

</nav>