<section class="py-10 max-w-2xl mx-auto">

  <h1 class="text-3xl font-bold text-purple-700 mb-2">
    Search Cars
  </h1>

  <p class="text-gray-600 mb-6">
    Use the filters below to find cars that match your criteria.
  </p>

  <%= form_with url: searches_path, method: :post, local: true, class: "space-y-6" do %>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Make
      </label>
      <%= text_field_tag :make,
            params[:make],
            placeholder: "e.g. BMW, Audi, Toyota",
            class: "w-full rounded-lg border border-gray-300 px-3 py-2
                    focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Model
      </label>
      <%= text_field_tag :model,
            params[:model],
            placeholder: "e.g. Camry, Corolla",
            class: "w-full rounded-lg border border-gray-300 px-3 py-2
                    focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">
        Year Range
      </label>

      <div class="grid grid-cols-2 gap-4">
        <%= number_field_tag :year_from,
              params[:year_from],
              placeholder: "From",
              min: 1900,
              max: Date.current.year,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>

        <%= number_field_tag :year_to,
              params[:year_to],
              placeholder: "To",
              min: 1900,
              max: Date.current.year,
              class: "w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>
      </div>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">
        Price Range ($)
      </label>

      <div class="grid grid-cols-2 gap-4">
        <%= number_field_tag :price_from,
              params[:price_from],
              placeholder: "Min price",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>

        <%= number_field_tag :price_to,
              params[:price_to],
              placeholder: "Max price",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>
      </div>
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">
        Kilometers Range (km)
      </label>

      <div class="grid grid-cols-2 gap-4">
        <%= number_field_tag :odometer_from,
              params[:odometer_from],
              placeholder: "From",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>

        <%= number_field_tag :odometer_to,
              params[:odometer_to],
              placeholder: "To",
              class: "w-full rounded-lg border border-gray-300 px-3 py-2
                      focus:border-purple-600 focus:ring-2 focus:ring-purple-600 focus:outline-none transition" %>
      </div>
    </div>

    <div class="flex gap-4">

      <%= submit_tag "Search",
            class: "flex-1 bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition" %>

      <%= link_to "Reset",
            new_search_path,
            class: "flex-1 text-center py-2 border border-gray-300 rounded-lg hover:bg-gray-100 transition" %>

    </div>


  <% end %>

  <div class="mt-6">
    <%= link_to "Back to Home page",
          root_path,
          class: "inline-block bg-purple-600 text-white px-6 py-3 rounded-lg shadow hover:bg-purple-700 transition duration-200" %>
  </div>

</section>
